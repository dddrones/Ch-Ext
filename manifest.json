{
    "manifest_version": 2, 
    "name": "Plant Friend",
    "description": "Grow plants on your web page!",
    "version": "1.0",
    "permissions": ["activeTab", "storage"],
    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "allFrames": true,
            "js": ["/js/jquery.js", "/js/content.js", "/js/popup.js"],
            "css": ["/css/style.css", "/css/button.css"]
       }
     ],
    "action": {
        "default_icon": {
            "32":"/images/icon.png"
        },
        "default_popup": "popup.html"
    },
    "web_accessible_resources": [ 
        "images/*.jpg",
        "images/*.png"
    ] 
}
